}

QPushButton[currentbtn="false"]
{
    background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #C6B6FC, stop: 1 #babbbe);
	border-style:outset;
	border-width:2px;
	border-radius:4px;
	border-color:beige;
	padding:0px 10px;
	font:13px;
}

QPushButton[currentbtn="false"]:hover 
{
    border-width:1px;
    padding:0px;
    font:bold 13px;
}

QPushButton#pBtnSetCraftRun[checked="true"],#pBtnSetCraftStop[checked="true"],#pBtnSetCraftLog[checked="true"],#pBtnCleanBoxInfo[checked="true"],
#pBtnEnableTaskReq[checked="true"],#pBtnWorkerModify[checked="true"],#pBtnClerkModify[checked="true"],#pBtnCarportModify[checked="true"],
