QCheckBox{
	spacing: 5px;
}

QCheckBox::indicator{
  margin-left:8px;
	width:17px;
	height:17px;
}

QGroupBox{
	background-color:qlineargradient(x1:0,y1:0,x2:0,y2:1,stop:0 #E0E0E0,stop:1 #F2F0F2);
	margin-top:6px;
	border:2px solid gray;
	border-radius:5px;
	padding-top:4px;
  font-size: 15px;
}

QGroupBox{
	background-color:qlineargradient(x1:0,y1:0,x2:0,y2:1,stop:0 #E0E0E0,stop:1 #F0F0F0);
	margin-top:0px;
	border:2px solid gray;
	border-radius:5px;
  font-size: 15px;
}

QGroupBox::title{
	subcontrol-origin:margin;
	subcontrol-position:top center;
	padding:0px 3px;
}

QLineEdit {
	background-color:#FFFFFF;
	color:#642100;
	border: 1px solid #4396FC;
	padding: 2px;
	border-radius: 2px;
	selection-background-color: #1B89CA;
}

QLineEdit:disabled {
	background-color:#dadbde;
	color: blue;
	border: 1px solid #4396FC;
	padding: 2px;
	border-radius: 2px;
	selection-background-color: #1B89CA;
}

QPushButton
{
	background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #f6f7fa, stop: 1 #dadbde);
	border:solid #5396FC;
	border-width:2px;
	border-radius:3px;
	border-style:outset;
	padding:0px;
	font:12px;
}

QPushButton:hover{
  background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #f6f7fa, stop: 1 #dadbde);
  border:solid #5396FC;
  border-width:1px;
  border-radius:3px;
  border-style:outset;
  padding:0px;
  font:bold 12px;
}

QPushButton:pressed{
  background-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #f6f7fa, stop: 1 #C6B6FC);
  /*color:#FFFFFF;*/
  border-style:outset;
  font:bold 12px;
}

/* “≥√Ê«–ªª∞¥≈• */
